<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Changes for product template (website_sale/views/templates.xml) -->
    <template id="website_sale_product_adds" inherit_id="website_sale.product">
        <xpath expr="//div[@class='col-sm-4']" position="replace"/>
        <xpath expr="//div[@class='col-sm-3 mb8']" position="replace"/>
        <xpath expr="//div[@id='product_details']//a[@id='add_to_cart']" position="before">
            <div class="form-control-dates">
                <label for="start-date">De</label>
                <input type="date"
                       name="start-date"
                       id="start-date"
                       required="required"
                       min="2018-12-01"
                       max="2019-01-31"/>
                <label for="week-duration">por</label>
                <select name="week-duration" id="week-duration">
                    <option value="1">1 semana</option>
                    <option value="2">2 semanas</option>
                    <option value="3">3 semanas</option>
                    <option value="4">4 semanas</option>
                </select>
                <label for="end-date">a</label>
                <input type="date"
                       name="end-date"
                       id="end-date"
                       readonly="readonly"/>
            </div>
            <!--<div class="form-control-dates-subtotal">
                <label>
                    Total:
                    <input name="total-date" id="total-date" type="text" size="2" readonly="readonly" value="0"/>
                    semana(s)
                </label>
            </div>-->
            <div class="form-control-dates-total">
                <h4>Total: <span class="dates-total-price"/> â‚¬</h4>
            </div>
            <div class="form-control-dates-quantity">
                <input name="add_qty" type="hidden"/>
                <input name="number_of_days" type="hidden"/>
                <input name="start_date" type="hidden"/>
                <input name="end_date" type="hidden"/>
            </div>
        </xpath>
    </template>

    <!-- Changes for price template on the product page -->
    <template id="website_sale_product_price_adds" inherit_id="website_sale.product_price">
        <xpath expr="//h4[@class='oe_price_h4 css_editable_mode_hidden']" position="inside">
            <span> por semana</span>
        </xpath>
    </template>

</odoo>